{
  "name": "potato-clock",
  "version": "1.2.0",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "exe": "tsc && vite build && electron-builder"
  },
  "build": {
    "appId": "com.potato.clock",
    "productName": "土豆钟",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ]
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "lucide-react": "^0.555.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.0",
    "typescript": "^5.3.0",
    "vite": "^5.2.0"
  }
}